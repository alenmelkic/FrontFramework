{
  "name": "@feframework/ui",
  "version": "1.0.0",
  "description": "Enterprise multi-brand UI component library",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:kentico": "vite build --config vite.kentico.config.ts",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "swiper": "^12.0.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.5",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.3",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.5",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "axe-core": "^4.10.2",
    "jest-axe": "^9.0.0",
    "jsdom": "^25.0.1",
    "purgecss": "^6.0.0",
    "sass": "^1.83.0",
    "terser": "^5.44.1",
    "typescript": "^5.7.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
