{
  "name": "feframework",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise multi-brand frontend component library",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:ui": "pnpm --filter @feframework/ui build",
    "build:kentico:energia": "cd packages/ui && cmd //c \"set KENTICO_OUTPUT_PATH=../../Energia.ie/Energia/wwwroot/dist&& set BRAND=energia&& npx vite build --config vite.kentico.config.ts\" && cd ../.. && node run-reorganize.js",
    "build:kentico:powerni": "cd packages/ui && cmd //c \"set KENTICO_OUTPUT_PATH=../../PowerNI.ie/PowerNI/wwwroot/dist&& set BRAND=powerni&& npx vite build --config vite.kentico.config.ts\" && cd ../.. && node run-reorganize-powerni.js",
    "build:kentico:all": "npm run build:kentico:energia && npm run build:kentico:powerni",
    "dev:frontend": "pnpm --filter @feframework/frontend dev",
    "build:frontend": "pnpm --filter @feframework/frontend build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "storybook": "pnpm --filter storybook storybook",
    "storybook:build": "pnpm --filter storybook build-storybook",
    "docs": "pnpm --filter docs start",
    "docs:build": "pnpm --filter docs build"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest-axe": "^9.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "typescript": "^5.7.3"
  }
}
